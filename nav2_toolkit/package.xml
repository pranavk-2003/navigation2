<?xml version="1.0"?>
<package format="3">
  <name>nav2_toolkit</name>
  <version>1.3.1</version>
  <description>
    This package provides a set of quality-of-life (QOL) tools to enhance the development experience when working with the navigation2 stack. It includes 
    helper scripts designed to streamline navigation testing and configuration in ROS 2.
  </description>
  <maintainer email="pranavkolekar13@gmail.com">Pranav</maintainer>
  <maintainer email="stevenmacenski@gmail.com">Steve Macenski</maintainer>
  <license>Apache-2.0</license>
  <license>BSD-3-Clause</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>nav2_common</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>geometry_msgs</depend>
  <depend>std_srvs</depend>
  <depend>yaml-cpp</depend>
  <depend>tf2</depend>
  <depend>tf2_geometry_msgs</depend>
  <depend>tf2_msgs</depend>
  <depend>tf2_ros</depend>

  <build_depend>nav2_common</build_depend>
  <build_depend>ament_index_cpp</build_depend>
  <exec_depend>nav2_common</exec_depend>
  <exec_depend>ament_index_cpp</exec_depend>
  
  <test_depend>ament_lint_common</test_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
